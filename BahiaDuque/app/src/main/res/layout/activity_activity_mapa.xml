<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.example.jons.bahiaduque.ActivityYate"
    android:background="@drawable/foto_cuerda_fondo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/style_baner_pampano">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homeBoton"
                android:background="@drawable/boton_home_pampano1"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/galeriaBoton"
                android:background="@drawable/boton_galeria"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barcoBoton"
                android:background="@drawable/boton_barco"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mapaBoton"
                android:background="@drawable/boton_mapa"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton13"
                android:src="@drawable/logo_pampano_modificado"
                android:layout_marginLeft="850dp"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="15dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="1036dp"
            android:layout_height="500dp"
            android:id="@+id/linearLayout"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">


            <FrameLayout
                android:layout_width="805dp"
                android:layout_height="match_parent"
                android:id="@+id/LayoutContenedor"
                android:layout_marginLeft="115dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="488dp"
                    android:layout_gravity="left|center_vertical"
                    android:background="@color/fondito"
                    android:padding="11dp"
                    android:weightSum="1"
                    android:id="@+id/contenedorDescripcion">

                    <ImageView
                        android:layout_width="439dp"
                        android:layout_height="match_parent"
                        android:id="@+id/imageDescripcion"
                        android:src="@drawable/foto_mapa"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/boton_snorkel"
                    android:background="@drawable/boton_snorkel"
                    android:layout_marginLeft="650dp"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/boton_capitan"
                    android:background="@drawable/boton_capitan"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/boton_comida"
                    android:background="@drawable/boton_comida"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
