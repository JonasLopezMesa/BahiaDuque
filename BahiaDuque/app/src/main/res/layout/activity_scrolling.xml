<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jons.bahiaduque.ActivityPresentation"
    android:focusable="true"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:id= "@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/style_baner_background">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@drawable/boton_home_pampano1"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@drawable/boton_galeria"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:background="@drawable/boton_carta_pulsado"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/imageButton13"
            android:src="@drawable/logo_blanco_cuadrado"
            android:layout_marginLeft="1000dp"
            android:scaleType="fitXY"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Entrantes"
                android:textColor="#FFFFFF"
                android:background="@drawable/style_boton_pulsado"
                android:id="@+id/entrantes"
                android:layout_marginLeft="240dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Pescados y Carnes"
                android:textColor="#FFFFFF"
                android:background="@drawable/style_boton"
                android:id="@+id/pescados_y_carnes" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Especialidades"
                android:textColor="#FFFFFF"
                android:background="@drawable/style_boton"
                android:id="@+id/especialidades" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Postres"
                android:textColor="#FFFFFF"
                android:background="@drawable/style_boton"
                android:id="@+id/postres" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollvertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:fillViewport="false">

        </ScrollView>

    </LinearLayout>


</LinearLayout>
